colorscheme default
set vifminfo=bookmarks,tui,dhistory,state,savedirs,chistory,shistory,phistory
set trashdir="~/.config/vifm/trash"
windo normal zo " show hidden files
set syscalls

set history=512
set undolevels=512

set wildmenu
set fastrun
set sortnumbers
set scrolloff=4
windo set number
windo set numberwidth=1
windo vsplit

set smartcase
set nohlsearch
set incsearch

set nowrap

set timefmt="%d.%m.%y %H:%M"
set statusline="  %t%= %A %10u:%-7g %15s %20d  "

source ~/.config/vifm/vifmrc.local.vifm
source ~/.config/vifm/marks.vifm
source ~/.config/vifm/filetypes.vifm
source ~/.config/vifm/commands.vifm
source ~/.config/vifm/mappings.vifm
