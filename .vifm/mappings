nmap rl :rlink<cr>
nmap al :alink<cr>
nmap S  :sort<cr>
nmap w  :view<cr>
nmap .  za
nmap =  :sync<cr>
nmap yp :clone<cr>
nmap yr :rsync -r --progress %c %D<cr>
nmap cd :cd<space>
nmap cs ga
nmap I  :term -e vim %f &<cr>
nmap cf :touch<space>
nmap dc :mkdir<space>
nmap s  :find<space>
nmap gr :grep<space>
nmap -  :cd ..<cr>
nmap zc :filter<space>
nmap cc :change<cr>

nmap ot :term &<cr>
nmap ov :vim &<cr>
nmap cv :term -e vim %f &<cr>
nmap rv :rename<cr>

" yank into the clipboard
nmap yd :!echo %d | xclip<cr>   " directory path
nmap yf :!echo %c:p | xclip<cr> " file path
nmap yn :!echo %c | xclip<cr>   " file name

nmap ,c :config<cr>
nmap ,t :cd ~/.trash<cr>
nmap ,v :cd ~/.vifm<cr>
nmap ,e :empty<cr>
nmap ,r :restore<cr>

nmap <f2> cw
nmap <f3> :view<cr>
nmap <f4> :edit<cr>
nmap <f5> :copy<cr>
nmap <f6> :move<cr>
nmap <f7> :mkdir<space>
nmap <f8> :delete<cr>
nmap <f9> :term<cr>
nmap <f10> :exit<cr>
